<?xml version="1.0"?>
<launch>
  <!--
    test_circle.launch
    
    Minimal launch file for testing basic robot movement in a circle.
    Launches only the controller and a simple circling test node.
    
    Usage:
      roslaunch tour_guide test_circle.launch [use_sim_time:=true]
  -->
  
  <!-- Arguments -->
  <arg name="use_sim_time" default="true"/>
  <param name="use_sim_time" value="$(arg use_sim_time)"/>
  
  <!-- Robot configuration (for simulation) -->
  <arg name="gui" default="true"/>
  <arg name="world_file" default="$(find tour_guide)/worlds/tour_world.world"/>
  
  <!-- ===================================================================== -->
  <!-- SIMULATION (Optional - comment out for real robot) -->
  <!-- ===================================================================== -->
  
  <!-- Launch Gazebo world (optional) -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch" if="$(arg use_sim_time)">
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="world_name" value="$(arg world_file)"/>
  </include>
  
  <!-- Spawn TurtleBot (optional) -->
  <arg name="base" value="$(optenv TURTLEBOT_BASE kobuki)"/>
  <arg name="stacks" value="$(optenv TURTLEBOT_STACKS hexagons)"/>
  <arg name="3d_sensor" value="$(optenv TURTLEBOT_3D_SENSOR kinect)"/>
  
  <include file="$(find tour_guide)/launch/includes/$(arg base).launch.xml" if="$(arg use_sim_time)">
    <arg name="base" value="$(arg base)"/>
    <arg name="stacks" value="$(arg stacks)"/>
    <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
    <arg name="x" value="0.0"/>
    <arg name="y" value="0.0"/>
    <arg name="z" value="0.0"/>
    <arg name="yaw" value="0.0"/>
  </include>
  
  <!-- Convert depth image to laser scan (for simulation) -->
  <node pkg="nodelet" type="nodelet" name="laserscan_nodelet_manager" args="manager" if="$(arg use_sim_time)"/>
  <node pkg="nodelet" type="nodelet" name="depthimage_to_laserscan"
        args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet laserscan_nodelet_manager" if="$(arg use_sim_time)">
    <param name="scan_height" value="10"/>
    <param name="output_frame_id" value="camera_depth_frame"/>
    <param name="range_min" value="0.0"/>
    <remap from="image" to="/camera/depth/image_raw"/>
    <remap from="scan" to="/scan"/>
  </node>
  
  <!-- ===================================================================== -->
  <!-- CONTROLLER -->
  <!-- ===================================================================== -->
  
  <!-- Main executive controller -->
  <!-- <node pkg="tour_guide" type="controller.py" name="tour_guide_controller" output="screen">
    <param name="use_sim_time" value="$(arg use_sim_time)"/>
  </node> -->
  
  <!-- ===================================================================== -->
  <!-- CIRCLE TEST NODE -->
  <!-- ===================================================================== -->
  
  <!-- Simple circling test node -->
  <node pkg="tour_guide" type="test_circle.py" name="test_circle" output="screen">
    <param name="linear_speed" value="0.15"/>   <!-- Forward speed (m/s) -->
    <param name="angular_speed" value="0.3"/>    <!-- Rotation speed (rad/s) -->
    <param name="rate" value="10.0"/>            <!-- Control loop rate (Hz) -->
  </node>
  
  <!-- ===================================================================== -->
  <!-- VISUALIZATION (Optional) -->
  <!-- ===================================================================== -->
  
  <!-- RViz -->
<include file="$(find turtlebot_rviz_launchers)/launch/view_navigation.launch" />
</launch>


<launch>
  <arg name="gui"        default="true"/>
  <arg name="world_name" default="tour_world"/>
  <arg name="world_file" default="$(find tour_guide)/worlds/$(arg world_name).world"/>

<!-- Initial pose (in feet and degrees) -->
  <arg name="x_feet" default="1.0"/>
  <arg name="y_feet" default="1.0"/>
  <arg name="z" default="0.0"/>
  <arg name="yaw_deg" default="0.0"/>
  <arg name="tasks" default="((5, 1), (10, 4));((12, 9), (4, 15))"/>

  <arg name="base"       value="$(optenv TURTLEBOT_BASE kobuki)"/> <!-- create, roomba -->
  <arg name="battery"    value="$(optenv TURTLEBOT_BATTERY /proc/acpi/battery/BAT0)"/>  <!-- /proc/acpi/battery/BAT0 -->
  <arg name="stacks"     value="$(optenv TURTLEBOT_STACKS hexagons)"/>  <!-- circles, hexagons -->
  <arg name="3d_sensor"  value="$(optenv TURTLEBOT_3D_SENSOR kinect)"/>  <!-- kinect, asus_xtion_pro -->

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="$(arg gui)" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

  <include file="$(find tour_guide)/launch/includes/$(arg base).launch.xml">
    <arg name="base" value="$(arg base)"/>
    <arg name="stacks" value="$(arg stacks)"/>
    <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
    <!-- Spawn uses Gazebo coordinates  (feet to meters conversion only) -->
    <arg name="x" value="$(eval -1.0 * arg('y_feet') / 3.28084)"/>
    <arg name="y" value="$(eval arg('x_feet') / 3.28084)"/>
    <arg name="z" value="$(arg z)"/>
    <arg name="yaw" value="$(eval arg('yaw_deg') * 3.14159265359 / 180.0)"/>
  </include>
  

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="30.0" />
  </node>

  <!-- Fake laser -->
  <node pkg="nodelet" type="nodelet" name="laserscan_nodelet_manager" args="manager"/>
  <node pkg="nodelet" type="nodelet" name="depthimage_to_laserscan"
        args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet laserscan_nodelet_manager">
    <param name="scan_height" value="10"/>
    <param name="output_frame_id" value="camera_depth_frame"/>
    <param name="range_min" value="0"/>
    <remap from="image" to="/camera/depth/image_raw"/>
    <remap from="scan" to="/scan"/>
  </node>

  <!-- Use custom gmapping launch that uses EKF output (odom_combined) to reduce map shifting -->
  <include file="$(find tour_guide)/launch/includes/gmapping_custom.launch.xml"/>

  <!-- Move base for navigation (custom configuration for closer obstacle approach) -->
  <include file="$(find tour_guide)/launch/includes/move_base.launch.xml"/>

  <!-- Exploration algorithm selection: frontier or rrt -->
  <arg name="exploration_algorithm" default="frontier" doc="Exploration algorithm: frontier or rrt"/>
  
  <node pkg="tour_guide" type="controller.py" name="controller" output="screen">
  </node>
  <node pkg="tour_guide" type="test_circle.py" name="test_circle" output="screen">
  </node>
  
  <!-- Frontier-based exploration (default) -->
  <group if="$(eval exploration_algorithm == 'frontier')">
    <node pkg="tour_guide" type="auto_explore.py" name="auto_explore" output="screen">
    </node>
  </group>
  
  <!-- RRT-based exploration -->
  <group if="$(eval exploration_algorithm == 'rrt')">
    <node pkg="tour_guide" type="auto_explore_rrt.py" name="auto_explore_rrt" output="screen">
    </node>
  </group>

  <node pkg="tour_guide" type="auto_explore_rrt_opencv.py" name="auto_explore_rrt_opencv" output="screen"
    if="$(eval arg('exploration_algorithm') == 'rrt_opencv')">
  </node>
  
  <node pkg="tour_guide" type="position_logger.py" name="position_logger" output="screen">
  </node>

  <!-- Robot health monitor (detects if robot disappears or falls) -->
  <node pkg="tour_guide" type="robot_health_monitor.py" name="robot_health_monitor" output="screen">
  </node>

  <!-- EKF Odometry to TF converter: Ensures odom->base_footprint transform is published from EKF data -->
  <!-- This fixes the issue where Gazebo might publish a static transform that overrides EKF -->
  <node pkg="tour_guide" type="ekf_odom_to_tf.py" name="ekf_odom_to_tf" output="screen">
  </node>

  <include file="$(find turtlebot_rviz_launchers)/launch/view_navigation.launch"/>
</launch>
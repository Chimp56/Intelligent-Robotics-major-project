<?xml version="1.0"?>
<launch>
  <!--
    autonomous_map.launch
    
    Launch file for autonomous mapping mode.
    Launches gmapping SLAM, controller, auto_mapper, and RViz.
    
    Usage:
      roslaunch tour_guide autonomous_map.launch [gui:=true] [world_file:=path/to/world]
  -->
  
  <!-- ===================================================================== -->
  <!-- ARGUMENTS -->
  <!-- ===================================================================== -->
  
  <!-- Gazebo GUI -->
  <arg name="gui" default="true"/>
  
  <!-- World file for simulation -->
  <arg name="world_file" default="$(find tour_guide)/worlds/tour_world.world"/>
  
  <!-- Initial robot pose (in feet/degrees for convenience) -->
  <arg name="x_feet" default="1.0"/>
  <arg name="y_feet" default="1.0"/>
  <arg name="z" default="0.0"/>
  <arg name="yaw_deg" default="0.0"/>
  
  <!-- Robot configuration -->
  <arg name="base" value="$(optenv TURTLEBOT_BASE kobuki)"/>     <!-- create | roomba | kobuki -->
  <arg name="stacks" value="$(optenv TURTLEBOT_STACKS hexagons)"/> <!-- circles | hexagons -->
  <arg name="3d_sensor" value="$(optenv TURTLEBOT_3D_SENSOR kinect)"/> <!-- kinect | asus_xtion_pro -->
  
  <!-- Use simulation time -->
  <arg name="use_sim_time" default="true"/>
  
  <!-- RViz configuration file -->
  <arg name="rviz_config" default="$(find tour_guide)/rviz/mapping.rviz"/>
  
  <!-- ===================================================================== -->
  <!-- SIMULATION (Gazebo) -->
  <!-- ===================================================================== -->
  
  <!-- Launch Gazebo world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="world_name" value="$(arg world_file)"/>
  </include>
  
  <!-- Spawn TurtleBot -->
  <include file="$(find tour_guide)/launch/includes/$(arg base).launch.xml">
    <arg name="base" value="$(arg base)"/>
    <arg name="stacks" value="$(arg stacks)"/>
    <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
    
    <!-- Convert feet/degrees to meters/radians -->
    <arg name="x" value="$(eval arg('x_feet') / 3.28084)"/>
    <arg name="y" value="$(eval arg('y_feet') / 3.28084)"/>
    <arg name="z" value="$(arg z)"/>
    <arg name="yaw" value="$(eval arg('yaw_deg') * 3.14159265359 / 180.0)"/>
  </include>
  
  <!-- ===================================================================== -->
  <!-- SENSOR PROCESSING -->
  <!-- ===================================================================== -->
  
  <!-- Convert depth image to laser scan -->
  <node pkg="nodelet" type="nodelet" name="laserscan_nodelet_manager" args="manager"/>
  <node pkg="nodelet" type="nodelet" name="depthimage_to_laserscan"
        args="load depthimage_to_laserscan/DepthImageToLaserScanNodelet laserscan_nodelet_manager">
    <param name="scan_height" value="10"/>
    <param name="output_frame_id" value="camera_depth_frame"/>
    <param name="range_min" value="0.0"/>
    <remap from="image" to="/camera/depth/image_raw"/>
    <remap from="scan" to="/scan"/>
  </node>
  
  <!-- ===================================================================== -->
  <!-- MAPPING (GMapping SLAM) -->
  <!-- ===================================================================== -->
  
  <!-- GMapping SLAM node -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_update_interval" value="2.0"/>
    
    <!-- Sensor parameters -->
    <param name="maxUrange" value="5.0"/>
    <param name="maxRange" value="8.0"/>
    <param name="minimumScore" value="50"/>
    
    <!-- Map size parameters (adjust for your environment) -->
    <param name="xmin" value="-10.0"/>
    <param name="ymin" value="-10.0"/>
    <param name="xmax" value="10.0"/>
    <param name="ymax" value="10.0"/>
    <param name="delta" value="0.05"/>  <!-- map resolution (m/cell) -->
    
    <!-- Laser scan topic -->
    <remap from="scan" to="/scan"/>
  </node>
  
  <!-- Static transform from map to odom (used during mapping) -->
  <node pkg="tf" type="static_transform_publisher" name="map_to_odom"
        args="0 0 0 0 0 0 map odom 100"/>
  
  <!-- ===================================================================== -->
  <!-- CONTROLLER AND AUTONOMOUS MAPPING -->
  <!-- ===================================================================== -->
  
  <!-- Main executive controller -->
  <node pkg="tour_guide" type="controller.py" name="tour_guide_controller" output="screen">
    <param name="use_sim_time" value="$(arg use_sim_time)"/>
  </node>
  
  <!-- Autonomous mapper (frontier exploration) -->
  <node pkg="tour_guide" type="auto_mapper.py" name="auto_mapper" output="screen">
    <param name="linear_speed" value="0.18"/>
    <param name="angular_speed" value="0.6"/>
    <param name="stop_distance" value="0.6"/>
    <param name="front_angle_range" value="60.0"/>
    <param name="random_rotation_interval" value="10.0"/>
    <param name="random_rotation_duration" value="2.0"/>
    <param name="random_rotation_probability" value="0.3"/>
  </node>
  
  <!-- ===================================================================== -->
  <!-- VISUALIZATION -->
  <!-- ===================================================================== -->
  
  <!-- RViz -->
  <node pkg="rviz" type="rviz" name="rviz" 
        args="-d $(arg rviz_config)" 
        output="screen" 
        if="$(arg gui)"/>
  
</launch>

